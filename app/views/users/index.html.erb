

<div class="container">
 <div class="row">
   <div class= "text-center">
     <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#mynewuser">
       New Subscriber
     </button>
   </div>
 </div>
<br>
<hr>

<div class="row" id="container_users">
   <%= render @users%>
</div>


<%= form_for(@user, remote: true) do |f|%>
<div class="modal fade" id="mynewuser" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">User</h4>
      </div>
      <div class="modal-body">
        <div class="field">
          <%= f.label :name %><br>
          <%= f.text_field :name, class: "form-control user_name" %>
        </div>
         <div class="field">
          <%= f.label :email %><br>
          <%= f.email_field :email, class: "form-control user_email" %>
        </div>
      </div>
      
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" id="mynewuserclose">Close
        </button>
        <%= submit_tag "Create", class: "btn btn-primary"%>
      </div>
    </div>
  </div>
</div>
<%end%>

</div>